<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_img_width" xsi:type="number">111</argument>
                <argument name="logo_img_height" xsi:type="number">50</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="footer" remove="true"/>
        <referenceBlock name="report.bugs" remove="true"/>
        <referenceBlock name="catalog.compare.sidebar" remove="true"/>
        <referenceBlock name="wishlist_sidebar" remove="true"/>
        <referenceBlock name="reviews.tab" remove="true" />
        <referenceBlock name="product.review.form" remove="true" />
        <referenceBlock name="product.info.review" remove="true" />
        <referenceBlock name="top.links">
            <block class="Magento\Framework\View\Element\Html\Link" name="seller-link">
                <arguments>
                    <argument name="path" xsi:type="string">marketplace/catalog/seller/profile</argument>
                    <argument name="label" xsi:type="string" translate="true">Marketplace Account</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link" name="message-link">
                <arguments>
                    <argument name="path" xsi:type="string">lofmarketplace/customer/message</argument>
                    <argument name="label" xsi:type="string" translate="true">Marketplace Messages</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="store.links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="account-login">
                <arguments>
                    <argument name="path" xsi:type="string">customer/account/login</argument>
                    <argument name="label" xsi:type="string" translate="true">Login</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="account-logout">
                <arguments>
                    <argument name="path" xsi:type="string">customer/account/logout</argument>
                    <argument name="label" xsi:type="string" translate="true">Logout</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="account-my">
                <arguments>
                    <argument name="path" xsi:type="string">customer/account/</argument>
                    <argument name="label" xsi:type="string" translate="true">My Account</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="seller-profile">
                <arguments>
                    <argument name="path" xsi:type="string">marketplace/catalog/seller/profile</argument>
                    <argument name="label" xsi:type="string" translate="true">Marketplace Account</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="seller-message">
                <arguments>
                    <argument name="path" xsi:type="string">lofmarketplace/customer/message</argument>
                    <argument name="label" xsi:type="string" translate="true">Marketplace Messages</argument>
                </arguments>
            </block>
        </referenceBlock>

    </body>
</page>
